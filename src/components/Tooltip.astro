---
const { text } = Astro.props;
---

<div class="relative group inline-block">
  <slot />

  <div 
    class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2
           whitespace-nowrap bg-gray-800 text-white text-sm 
           px-2 py-1 rounded opacity-0 group-hover:opacity-100 
           transition-opacity duration-200 pointer-events-none z-50"
    id="tooltip"
  >
    {text}
  </div>
</div>